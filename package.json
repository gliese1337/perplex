{
  "name": "perplex",
  "version": "0.12.0-alpha.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run docs",
    "docs": "typedoc --out ./docs --mode file --excludePrivate ./src",
    "gh-pages": "gh-pages -d docs",
    "lint": "prettier -l '{src,test}/**/*.ts'",
    "lint:fix": "prettier --write '{src,test}/**/*.ts'",
    "precommit": "npm run build && npm run lint && npm run test",
    "prepack": "npm run build && npm test",
    "test": "tape -r 'ts-node/register' test/index.ts",
    "test:debug": "ts-node --inspect-brk test/index.ts",
    "test:diff": "npm test | tap-diff",
    "test:spec": "npm test | tap-spec",
    "test:cover": "nyc npm test",
    "test:cover:html": "nyc -r html npm test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^7.0.10",
    "@types/tape": "^4.2.30",
    "except": "^0.1.3",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "nyc": "^11.6.0",
    "prettier": "^1.10.2",
    "tap-diff": "^0.1.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.7.0",
    "ts-node": "^3.2.1",
    "tslint": "^4.5.1",
    "typedoc": "^0.11.1",
    "typescript": "^2.2.1"
  },
  "repository": "https://github.com/jrop/perplex",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "nyc": {
    "extension": [
      ".ts"
    ]
  },
  "files": [
    "lib/lexer-state.d.ts",
    "lib/lexer-state.js",
    "lib/lexer.js",
    "lib/lexer.d.ts",
    "lib/token-types.d.ts",
    "lib/token-types.js",
    "lib/token.d.ts",
    "lib/token.js",
    "index.js",
    "index.d.ts"
  ]
}
